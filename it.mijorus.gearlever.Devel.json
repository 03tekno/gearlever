{
    "app-id" : "it.mijorus.gearlever",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "gearlever",
    "finish-args" : [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",

        "--filesystem=xdg-data/applications:rw",
        "--filesystem=xdg-data/icons:ro",
        "--filesystem=home:rw",

        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.freedesktop.portal.OpenURI",
        "--talk-name=org.freedesktop.portal.OpenFile",

        "--filesystem=/tmp:rw"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "./python3-requirements.json",
        {
            "name" : "gearlever",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "./"
                }
            ]
        }
    ]
}
